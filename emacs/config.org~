* Emacs

** Theme
#+begin_src emacs-lisp
  (load-theme 'catppuccin :no-confirm)
  (setq catppuccin-flavor 'mocha) ;; or 'latte, 'mochiatto
  (catppuccin-reload)
#+end_src

** Layout
#+begin_src emacs-lisp
  ;; Disable tool bar
  (tool-bar-mode -1)

  ;; Disable menu bar
  (menu-bar-mode -1)

  ;; Disable scroll bar
  (scroll-bar-mode -1)

  ;; Disable start up emacs message and go to buffer
  (setq inhibit-startup-message t)

  ;; Disable backup file
  (setq make-backup-file nil)

  ;; Disable auto save
  (setq auto-save-default nil)

  ;; Improve scrolling
  (setq scroll-conservatively 100)

  ;; Utilize prettify sybmols
  (when window-system (global-prettify-symbols-mode t))

  ;; Highlight cursor line
  (when window-system (global-hl-line-mode t))


#+end_src

** Prompt
#+begin_src emacs-lisp
  ;; Change yes-no prompt to y-or-n
  (defalias 'yes-or-no-p 'y-or-n-p)

  ;; Disable ring
  (setq ring-bell-function 'ignore)

  ;; Disable symbolic link prompt
  (setq vc-follow-symlinks t)
  
  ;; Follow symbolic link and edit actual file
  (setq vc-follow-symlinks nil)

#+end_src

* Terminal

** Setting default shell to zsh
#+begin_src emacs-lisp
    (defvar my-term-shell "/bin/zsh")
    (defadvice ansi-term (before force-bash)
     (interactive (list my-term-shell)))
  (ad-activate 'ansi-term)
  ;; (global-set-key (kbd "<s-return>)" 'ansi-term)
#+end_src
